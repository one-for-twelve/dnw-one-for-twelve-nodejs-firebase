{
  "files": ["./src/index.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "target": "es2020",
    "module": "es2020",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "packages/*": ["packages/*"]
    }
  }
}
